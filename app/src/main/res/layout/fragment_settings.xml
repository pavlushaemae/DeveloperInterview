<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="10dp"
    android:paddingEnd="10dp">
    <!--    #53A1C8-->
    <TextView
        android:id="@+id/tv_app_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Developer Interview"
        android:paddingStart="125dp"
        app:layout_constraintBottom_toTopOf="@id/tv_language"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_language"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Язык"
        app:layout_constraintBottom_toTopOf="@id/tv_russian"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_app_name" />

    <TextView
        android:id="@+id/tv_russian"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Русский"
        app:layout_constraintBottom_toTopOf="@id/tv_english"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_language" />

    <TextView
        android:id="@+id/tv_english"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Английский"
        app:layout_constraintBottom_toTopOf="@id/tv_themes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_russian" />

    <TextView
        android:id="@+id/tv_themes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Тема приложения"
        app:layout_constraintBottom_toTopOf="@id/tv_theme_change"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_english" />

    <TextView
        android:id="@+id/tv_theme_change"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Смена темы"
        android:shadowColor="@color/teal_200"
        app:layout_constraintBottom_toTopOf="@id/tv_statistics"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_themes" />

<!--    <TextView-->
<!--        android:id="@+id/tv_theme_dark"-->
<!--        android:layout_width="0dp"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="Тёмная"-->
<!--        android:layout_marginEnd="50dp"-->
<!--        app:layout_constraintBottom_toTopOf="@id/tv_statistics"-->
<!--        app:layout_constraintEnd_toEndOf="parent"-->
<!--        app:layout_constraintStart_toStartOf="parent"-->
<!--        app:layout_constraintTop_toBottomOf="@id/tv_theme_light" />-->

    <TextView
        android:id="@+id/tv_statistics"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Статистика приложения"
        app:layout_constraintBottom_toTopOf="@id/tv_reset_statistics"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_theme_change" />

    <TextView
        android:id="@+id/tv_reset_statistics"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Сбросить статистику"
        app:layout_constraintBottom_toTopOf="@id/tv_notifications"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_statistics" />

    <TextView
        android:id="@+id/tv_notifications"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Уведомления"
        app:layout_constraintBottom_toTopOf="@id/tv_configure_notifications"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_reset_statistics" />

    <TextView
        android:id="@+id/tv_configure_notifications"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Настроить"
        app:layout_constraintBottom_toTopOf="@id/tv_other"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_notifications"
        android:focusable="true" />

    <TextView
        android:id="@+id/tv_other"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Прочее"
        app:layout_constraintBottom_toTopOf="@id/tv_feedback"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_configure_notifications" />

    <TextView
        android:id="@+id/tv_feedback"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Обратная связь"
        app:layout_constraintBottom_toTopOf="@id/tv_user_agreement"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_other" />
    <TextView
        android:id="@+id/tv_user_agreement"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Пользовательское соглашение"
        app:layout_constraintBottom_toTopOf="@id/tv_app_version"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_feedback" />

    <TextView
        android:id="@+id/tv_app_version"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Версия приложения:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_user_agreement" />

    <TextView
        android:id="@+id/tv_app_version_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="0.0.1"
        android:paddingStart="300dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_user_agreement" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch_themes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/tv_statistics"
        android:layout_marginStart="300dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_themes"/>

</androidx.constraintlayout.widget.ConstraintLayout>