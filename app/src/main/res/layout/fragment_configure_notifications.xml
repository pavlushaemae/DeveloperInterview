<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="10dp"
    android:paddingTop="0dp"
    android:paddingEnd="10dp"
    android:paddingBottom="350dp">

    <TextView
        android:id="@+id/tv_app_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="125dp"
        android:paddingEnd="0dp"
        android:text="@string/developer_interview"
        app:layout_constraintBottom_toTopOf="@id/tv_selected_time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_selected_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="08:45 PM"
        android:textSize="40dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@id/btn_select_time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_app_name"/>

    <Button
        android:id="@+id/btn_select_time"

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Выберите время"
        android:backgroundTint="@color/background_color_light"
        app:layout_constraintBottom_toTopOf="@id/btn_set_notification_time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_selected_time" />

    <Button
        android:id="@+id/btn_set_notification_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Назначить уведомления"
        android:backgroundTint="@color/background_color_light"
        app:layout_constraintBottom_toTopOf="@id/btn_off_notifications"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_select_time" />

    <Button
        android:id="@+id/btn_off_notifications"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Выключить уведомления"
        android:backgroundTint="@color/background_color_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_set_notification_time"/>


