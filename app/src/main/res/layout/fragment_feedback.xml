<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="10dp"
    android:paddingTop="0dp"
    android:paddingEnd="10dp"
    android:paddingBottom="450dp">

    <TextView
        android:id="@+id/tv_app_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="125dp"
        android:paddingEnd="10dp"
        android:text="@string/developer_interview"
        app:layout_constraintBottom_toTopOf="@id/tv_for_all_questions"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_for_all_questions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/for_all_questions"
        app:layout_constraintBottom_toTopOf="@id/tv_email_one"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_app_name" />

    <TextView
        android:id="@+id/tv_email_one"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Почта1"
        app:layout_constraintBottom_toTopOf="@id/tv_email_two"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_for_all_questions" />

    <TextView
        android:id="@+id/tv_email_two"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Почта2"
        app:layout_constraintBottom_toTopOf="@id/tv_email_three"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_email_one" />

    <TextView
        android:id="@+id/tv_email_three"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Почта3"
        app:layout_constraintBottom_toTopOf="@id/tv_email_four"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_email_two" />

    <TextView
        android:id="@+id/tv_email_four"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Почта4"
        app:layout_constraintBottom_toTopOf="@id/tv_email_five"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_email_three" />

    <TextView
        android:id="@+id/tv_email_five"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Почта5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_email_four" />

</androidx.constraintlayout.widget.ConstraintLayout>